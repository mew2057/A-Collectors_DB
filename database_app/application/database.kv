#:kivy 1.9.1

<DatabaseRoot>:
          
     RootRibbon:
          pos: 0, root.top - self.height/2
     
    

<RootRibbon>:
     Button:
          id: file_btn
          text: 'File'
          on_release: file_dropdown.open(self)
          on_press: file_dropdown.open(self)
          size_hint_y: None
          height: '48dp'
          AnchorLayout:
               anchor_x:'left'
               anchor_y:'top'
               
     FileDropDown:
          on_parent: self.dismiss()
          id: file_dropdown
          
          Button:
               text: 'New'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Open'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('');file_dropdown.open_database()
          Button:
               text: 'Save'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Save As'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Save Copy As'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Import CSV'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Export CSV'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select('')
          Button:
               text: 'Exit'
               size_hint_y: None
               height: '24dp'
               on_release: file_dropdown.select(''); app.stop();
     
<FileDropDown>:     
     

<LoadDialog>:
     BoxLayout:
          orientation:"vertical"
          size: root.size
          pos:  root.pos
          
          FileChooserListView:
               id: filechooser
               
          BoxLayout:
               size_hint_y: None
               height: 64
               padding: 14,14,24,14
               spacing:24
               
               Button:
                    text: "Load"
                    on_release: root.load(filechooser.path, filechooser.selection)
                    height:'14dp'               
               
               Button:
                    text: "Cancel"
                    on_release: root.close()
                    height:'14dp'
                    
               Label:

